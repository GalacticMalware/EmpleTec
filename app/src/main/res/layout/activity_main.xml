<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.mx.empleatec.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="para ti"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Una aplicacion diseñada"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textColorLink="?android:attr/colorForegroundInverse"
        android:textIsSelectable="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/opc1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/opc2"
        android:layout_alignStart="@+id/opc2"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="52dp"
        android:background="#c538438f"
        android:elevation="0dp"
        android:text="¿Buscas trabajo?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textSize="24sp" />

    <Button
        android:id="@+id/opc2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Acerca"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="#c538438f"
        android:text="¿Buscas empleado?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Acerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/opc2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/opc2"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:background="#00ffffff"
        android:text="Acerca de"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#d0ffffff"
        android:textColorHighlight="@android:color/background_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:text="Bienvenido a EMPLEATE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_light"
        android:textIsSelectable="true"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Acerca"
        android:layout_alignBottom="@+id/Acerca"
        android:layout_alignEnd="@+id/opc2"
        android:layout_alignRight="@+id/opc2"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="#00ffffff"
        android:text="Creditos"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#d0ffffff"
        android:textStyle="bold" />
</RelativeLayout>
